let mapleader=","

set path+=** " search subdir
set wildignore+=*.o,*~,*.pyc,*.class,*.swp

set nocompatible   " Disable vi-compatibility
set wildmenu
set noswapfile
set ts=2
set expandtab
set shiftwidth=2
set softtabstop=2
set incsearch
set hlsearch
set showmatch
set backspace=2
set spr " for vs window in right
set cursorline
set encoding=utf-8
set showcmd
set autochdir
set textwidth=100
set colorcolumn=101
" Better display for messages
set cmdheight=2
" Smaller updatetime for CursorHold & CursorHoldI
set updatetime=300
